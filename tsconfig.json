{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "./node_modules/**/*"
  ]
}